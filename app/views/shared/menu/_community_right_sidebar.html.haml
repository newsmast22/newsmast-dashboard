.container.mt-4.pt-4
  .stepper
    .step.step-1{ class: (@current_step == 1 ? 'active' : (@current_step >= 1 ? 'done' : '')) }
      .circle
        %span.smal{ class: (@current_step > 1 ? 'step-no' : '') } 1
      .label
        %strong Community Information
        %p.desc.small Set up the basic details of your community.
    .step.step-2{ class: (@current_step == 2 ? 'active' : (@current_step >= 2 ? 'done' : '')) }
      .circle
        %span.small{ class: (@current_step > 2 ? 'step-no' : '') } 2
      .label
        %strong Admin Details
        %p.desc.small Assign administrators to manage your community.
    .step.step-3{ class: (@current_step == 3 ? 'active' : (@current_step >= 3 ? 'done' : '')) }
      .circle
        %span.small{ class: (@current_step > 3 ? 'step-no' : '') } 3
      .label
        %strong Add Content
        %p.desc.small Determine the hashtags for categorising posts and select key contributors within your community.
    .step.step-4{ class: (@current_step == 4 ? 'active' : (@current_step >= 4 ? 'done' : '')) }
      .circle
        %span.small{ class: (@current_step > 4 ? 'step-no' : '') } 4
      .label
        %strong Filter Content
        %p.desc.small Ensure the quality and relevance of content in your community.
    .step.step-5{ class: (@current_step == 5 ? 'active' : (@current_step >= 5 ? 'done' : '')) }
      .circle
        %span.small{ class: (@current_step > 5 ? 'step-no' : '') } 5
      .label
        %strong Share Content
        %p.desc.small Organise and discover posts within your community.
    .step.step-6{ class: (@current_step == 6 ? 'active' : (@current_step >= 6 ? 'done' : '')) }
      .circle
        %span.small{ class: (@current_step > 6 ? 'step-no' : '') } 6
      .label
        %strong Additional Information
        %p.desc.small Add your community guidelines and any additional information for this community.
