          .row
            .col.card.list-group-item
              .icheck-primary
                %input.mr-2#check1{type: "checkbox", value: ""}/
                Reposts
          .row
            .col.card.list-group-item
              .icheck-primary
                %input.mr-2#check1{type: "checkbox", value: ""}/
                Replies
      .card
        .card-body
          .row
            .col
              %label Mute accounts
              %p.text-muted.small Choose accounts to Mute from the Community.
          .row.d-flex.justify-content-between
            .col-auto
              %label Your muted contributors (0)
            .col-auto
              %button.btn.btn-outline-secondary{"data-toggle" => "modal", "data-target" => "#muteContributorModal"} Search
          .table-responsive
            %table.table.mt-3.table-striped
              %tbody
                %tr
                  %td.text-center
                    %p.text-muted.small You haven’t muted any contributors from this community yet
                    %a.text-danger.small{ href: '#', title: 'Click here to search', 'data-toggle': 'modal', 'data-target': '#muteContributorModal' }
                      Click here to search
      .card
        .card-body
          .row.d-flex.justify-content-between
            .col-md-9-auto
              %label Keyword filtering
              %p.text-muted.small Add keyword filters to prevent posts from the wider network using this keyword from appearing in the community.
            .col-md-3-auto.mt-auto
              %button.btn.btn-outline-secondary{"data-toggle" => "modal", "data-target" => "#filterModal"} Add New
          .table-responsive
            %table.table.mt-3.table-striped
              %tbody
                %tr
                  %td.text-center
                    %p.text-muted.small You haven’t muted any contributors from this community yet
                    %a.text-danger.small{ href: '#', title: 'Click here to add one', 'data-toggle': 'modal', 'data-target': '#filterModal' }
                      Click here to add one
      .row.d-flex.justify-content-between
        .col
          %a.btn.btn-outline-secondary{ href: step3_communities_path } Back
        .col-auto
          %a.btn.btn-danger{ href: step5_communities_path } Continue

