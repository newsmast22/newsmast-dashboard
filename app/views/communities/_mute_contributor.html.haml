#muteContributorModal.modal.fade{ role: 'dialog', tabindex: "-1", aria: { labelledby: 'muteContributorModalLabel', hidden: 'true' } }
  .modal-dialog.custom-modal-width{ role: 'document' }
    .modal-content
      .modal-header
        %h5.modal-title Mute a contributor
        %button.close{ type: 'button', 'data-dismiss': 'modal', 'aria-label': 'Close' }
          = image_tag 'icons/circle-xmark.svg', alt: 'Close', width: 18, height: 18, 'aria-hidden': 'true'
      .modal-body
        %p Use the search functionality below to mute contributors from your community.
        %button.btn.btn-outline-secondary{ type: "button" }
          Mute from shared list
          %i.fa-solid.fa-list.ml-2
        .input-group.my-3
          %div.input-group-prepend
            %span.input-group-text
              %i.fa-solid.fa-search
          %input.form-control{ "aria-label": "Search contributor", placeholder: "Search by name or username", type: "text" }
        %h6 Search results for “John Smith”
        .list-group
          - 2.times do
            .list-group-item.d-flex.justify-content-between.align-items-center
              .profile-info.row
                .col-auto
                  %img{ alt: "profile picture", src: asset_path('patchwork-logo.svg'), class: "rounded-circle mr-2", style: "width: 70px; height: 70px;" }
                .col
                  .text
                    %p.mb-0 Profile Name
                    %small.text-muted @profilename
                    %p.small Bio ipsum dolor sit amet consectetur. Quam nunc velit tincidunt accumsan ultrices.
                .col-auto.ml-5.pl-5.mt-5
                  %button.btn.btn-outline-secondary Unmute
      .modal-footer
        %button.btn.btn-secondary{ "data-dismiss": "modal" } Cancel
        %button.btn.btn-danger Save changes
