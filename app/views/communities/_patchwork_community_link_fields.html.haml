%tr.nested-fields
  %td{ style: 'width: 20%;' }
    = f.select :icon, options_for_select(CommunityLink.icons.keys.map { |icon| [icon.titleize, icon] }, f.object.icon), {}, class: 'form-control'
  %td{ style: 'width: 30%;' }
    = f.text_field :name, class: 'form-control', placeholder: "Enter name"
  %td{ colspan: 2, style: 'width: 45%;' }
    = f.text_field :url, class: 'form-control', placeholder: "Enter URL here"
  %td{ colspan: 2, style: 'width: 5%;' }
    = link_to_remove_association f, class: 'text-danger', title: "Remove" do
      = image_tag("icons/trash-can.svg", class: "ml-2", width: "16", height: "16")
