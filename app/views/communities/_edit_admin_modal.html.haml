#editAdminModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "editModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#editModalLabel.modal-title Edit Admin
        %button.close{ type: 'button', 'data-dismiss': 'modal', 'aria-label': 'Close' }
          = image_tag 'icons/circle-xmark.svg', alt: 'Close', width: 18, height: 18, 'aria-hidden': 'true'
      .modal-body
        = simple_form_for @edit_admin_form, url: step2_update_admin_community_path, method: :patch, html: { id: 'edit_admin_form' } do |form|
          = form.hidden_field :community_id, value: @community.id, id: 'edit_admin_community_id'
          = form.hidden_field :admin_id, value: @edit_admin.id, id: 'edit_admin_admin_id'
          .row
            .col
              .form-group
                = form.label :channel
                = form.text_field :channel, class: 'form-control', value: @community.name, id: 'edit_admin_channel', disabled: true
            .col
              .form-group
                = form.label :role
                = form.text_field :role, class: 'form-control', value: 'Admin', id: 'edit_admin_role', disabled: true
          .row
            .col
              .form-group
                = form.label :display_name
                = form.text_field :display_name, class: 'form-control', value: @edit_admin.display_name, id: 'edit_admin_display_name', required: true
            .col
              .form-group
                = form.label :user_name
                = form.text_field :username, class: 'form-control', value: @edit_admin.username, id: 'edit_admin_username', required: true
          .modal-footer
            %div.d-flex.justify-content-end
              .col
                %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Cancel
              .col
                = form.submit 'Save changes', class: 'btn btn-danger'
