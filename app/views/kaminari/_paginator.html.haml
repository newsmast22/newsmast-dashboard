  %ul.pagination.pagination-sm.m-0.float-right
    - if @custom_paginator.prev_page
      %li.page-item
        = link_to raw('&laquo;'), url_for_page(@custom_paginator.prev_page), class: 'page-link'
    - else
      %li.page-item.disabled
