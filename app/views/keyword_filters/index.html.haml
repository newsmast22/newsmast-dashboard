- content_for :title do
  = 'Keyword filters'

.row
  .col-12
    .card
      .card-header
        %h3.card-title Keyword filters
        .card-tools
          .input-group.input-group-sm{"data-toggle" => "tooltip", "data-placement" => "top", "title"=>"Actions"}
            = link_to new_keyword_filter_url, class: 'form-control float-right mr-2', title: 'Add New Keyword' do
              %i.fa-solid.fa-circle-plus
            = link_to keyword_filters_path(format: 'csv'), class: 'form-control float-right', title: 'Export CSV' do
              %i.fa-solid.fa-file-arrow-down
            = form_tag import_keyword_filters_path, multipart: true, class: 'form-control btn btn-sm btn-info ml-2' do
              %label{for: 'file', title: 'Import CSV'}
                %i.fas.fa-file-import
                = file_field_tag :file, id: 'file', class: 'd-none'
                = submit_tag 'Upload CSV', class: 'd-none'
      .card-body
        %table#datatable.table.table-bordered.table-striped{data: {url: keyword_filters_url, type: 'keyword_filter_list'}}
          %thead
            %tr
              %th Server setting
              %th Keyword
              %th Is active?
              %th Filter type
              %th Actions
          %tbody