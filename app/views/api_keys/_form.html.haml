.row
  .col-12
    .card
      .card-header
        %h3.card-title
          = "#{action_name.capitalize} API key"

      .card-body.w-50
        = simple_form_for @api_key do |f|
          
          .mb-3
            = f.label :key, class: 'form-label'
            = f.text_field :key, class: 'form-control', required: true

          .mb-3
            = f.label :secret, class: 'form-label'
            = f.text_field :secret, class: 'form-control' , required: true

          = f.button :submit, 'Save', class: 'btn btn-outline-primary'
          = link_to 'Back', api_keys_path, class: 'ml-2 text-gray'