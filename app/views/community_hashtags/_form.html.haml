- @community ||= @community_hashtag.community
.row
  .col-12
    .card
      .card-header
        %h3.card-title
          = "#{action_name.capitalize} hashtag"

      .card-body.w-50
        = simple_form_for @community_hashtag do |f|
          = f.hidden_field :community_id, value: @community.id
          = hidden_field_tag :type, params[:type]
          
          .mb-3
            = f.label :hashtag, class: 'form-label'
            = f.text_field :hashtag, class: 'form-control', required: true

          .mb-3
            = f.label :is_incoming, "Is the community's hashtag?", class: 'form-label'
            = f.check_box :is_incoming, class: 'form-control', checked: params[:type] != 'outgoing_hashtags'

          = f.button :submit, 'Save', class: 'btn btn-outline-primary'
          = link_to 'Back', community_url(@community.slug, type: params[:type]), class: 'ml-2 text-gray'